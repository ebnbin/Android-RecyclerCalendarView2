<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background">#fff</color>
    <color name="weeks_background">#eee</color>
    <color name="divider">#ddd</color>
    <color name="year_month_background">#fff</color>
    <color name="unselected_background">#fff</color>
    <color name="selected_background">#f00</color>
    <color name="ranged_background">#f88</color>
    <color name="unselected_text">#000</color>
    <color name="selected_text">#fff</color>
    <color name="unselected_today_text">#f00</color>
    <color name="unselected_special_text">#fa0</color>
    <color name="unselected_festival_text">#f00</color>
    <color name="unselected_weekend_text">#f00</color>
    <color name="disabled_text">#ccc</color>
    <color name="week_text">#888</color>
    <color name="year_month_text">#444</color>

    <dimen name="weeks_height">40dp</dimen>
    <dimen name="date_height">48dp</dimen>
    <dimen name="year_month_height">32dp</dimen>
    <dimen name="divider_height">0.5dp</dimen>
    <dimen name="placeholder_height">64dp</dimen>
    <dimen name="calendar_margin_top">39.5dp</dimen>
    <dimen name="week_text_size">11sp</dimen>
    <dimen name="year_month_text_size">12sp</dimen>
    <dimen name="day_text_size">13sp</dimen>
    <dimen name="special_text_size">10sp</dimen>

    <string name="sunday">日</string>
    <string name="monday">一</string>
    <string name="tuesday">二</string>
    <string name="wednesday">三</string>
    <string name="thursday">四</string>
    <string name="friday">五</string>
    <string name="saturday">六</string>

    <style name="WeekTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/week_text</item>
        <item name="android:textSize">@dimen/week_text_size</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_calendar">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_calendar"
        android:paddingBottom="@dimen/height_placeholder"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_week"
        android:orientation="horizontal"
        android:background="@color/background_week">
        <TextView
            style="@style/WeekTextView"
            android:text="@string/sunday"/>
        <TextView
            style="@style/WeekTextView"
            android:text="@string/monday"/>
        <TextView
            style="@style/WeekTextView"
            android:text="@string/tuesday"/>
        <TextView
            style="@style/WeekTextView"
            android:text="@string/wednesday"/>
        <TextView
            style="@style/WeekTextView"
            android:text="@string/thursday"/>
        <TextView
            style="@style/WeekTextView"
            android:text="@string/friday"/>
        <TextView
            style="@style/WeekTextView"
            android:text="@string/saturday"/>
    </LinearLayout>
</FrameLayout>
